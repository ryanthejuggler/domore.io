extends layout

block content
  h1 dashboard for
    = " "+user.username
  div
    a.btn.btn-success(data-toggle="modal" href="#addTask")
      .glyphicon.glyphicon-plus
      |  add task




block scripts
  script.(language="JavaScript")
    words = ['wikis','programs','documents', 'specifications','meetings','lists'];
    n = 0;
    setInterval(function(){
      $('#roller').text(words[n++]);
      n%=words.length;
    }, 1000);