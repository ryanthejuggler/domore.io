extends layout

block content
  h1 register
  h3 sorry, invite-only for the time being
  form.form-horizontal(method='post')
    fieldset
      .control-group
        label.control-label(for='username') username
        .controls
          input#username.input-xlarge(type='text', name='username')
      .control-group
        label.control-label(for='password') password
        .controls
          input#password.input-xlarge(type='password', name='password')
      .control-group
        label.control-label(for='password-again') password again
        .controls
          input#password-again.input-xlarge(type='password', name='passwordAgain')
      .control-group
        label.control-label(for='invite') invite code
        .controls
          input#invite.input-xlarge(type='text', name='invite')
      .form-actions(style="margin-top:10px;")
        button.btn.btn-primary(type='submit') register

